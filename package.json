{
  "name": "hardhat-project",
  "scripts": {
    "chain": "hardhat node --network hardhat",
    "test": "hardhat test --network hardhat",
    "compile": "hardhat compile",
    "deploy": "hardhat compile & hardhat deploy",
    "build": "hardhat compile",
    "generate": "scripts/generate.sh",
    "verify": "npx hardhat verify",
    "coverage": "npx hardhat clean && npx hardhat coverage --solcoverjs .solcover.ts --network hardhat",
    "typechain": "npx hardhat typechain",
    "clean": "npx hardhat clean",
    "slither": "npm run clean && slither . --config ./slither.config.json --exclude arbitrary-send-erc20,unused-return,assembly-usage,solc-version,low-level-calls,conformance-to-solidity-naming-conventions",
    
    "codegen": "graph codegen",
    "graph-build": "graph build",
    "graph-deploy": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ GITHUB_USERNAME/your-contract",
    "graph-create-local": "graph create --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-remove-local": "graph remove --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 scaffold-eth/your-contract"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "hardhat": "^2.13.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.2",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@typechain/ethers-v5": "^10.1.1",
    "@typechain/hardhat": "^6.1.4",
    "@types/chai": "^4.3.4",
    "@types/commander": "^2.12.2",
    "@types/inquirer": "^9.0.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "@walletconnect/qrcode-modal": "^1.8.0",
    "@walletconnect/web3-provider": "^1.8.0",
    "chai": "^4.3.7",
    "commander": "^9.4.1",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "inquirer": "^9.1.4",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.3",
    "web3": "^1.8.1",
    "@graphprotocol/graph-cli": "^0.30.2",
    "@graphprotocol/graph-ts": "^0.27.0"
  }
}
